{
  "name": "application-server",
  "scripts": {
    "generate": "graphql-codegen --config codegen.yml && graphql-codegen --config codegen.test.yml",
    "build": "npm run generate",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev src/index.ts",
    "test": "jest --watch --verbose ./src/tests",
    "test:generate": "graphql-codegen --watch \"src/tests/**/**.graphql\" --config codegen.test.yml",
    "prepare": "cd ../.. && husky install web-app/server/.husky"
  },
  "dependencies": {
    "@graphql-tools/import": "^6.6.18",
    "apollo-server-core": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "async": "^3.2.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "express-graphql": "^0.12.0",
    "fast-csv": "^4.3.6",
    "graphql": "^15.8.0",
    "graphql-middleware": "^6.1.15",
    "graphql-tools": "^8.2.13",
    "jest": "^28.1.1",
    "jsonwebtoken": "^8.5.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.28",
    "kafkajs": "^2.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node": "16.13.2",
    "nodemailer": "^6.7.2",
    "pg": "^8.6.0",
    "pgtools": "^0.3.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.21.0",
    "sequelize-typescript": "^2.1.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.4.0",
    "typescript": "4.9.4",
    "uuid": "8.3.2",
    "validator": "^13.11.0",
    "webpack": "^5.73.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.5.0",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/near-operation-file-preset": "2.2.0",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.0",
    "@graphql-codegen/typescript-resolvers": "2.4.3",
    "@types/async": "^3.2.12",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "4.17.13",
    "@types/express-fileupload": "^1.2.0",
    "@types/express-jwt": "^6.0.4",
    "@types/graphql-upload": "^8.0.10",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^28.1.3",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.18",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.3",
    "@types/sequelize": "^4.28.13",
    "@types/uuid": "^8.3.3",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "8.20.0",
    "graphql-upload": "^13.0.0",
    "http-errors": "^1.8.1",
    "husky": "6.0.0",
    "lint-staged": "13.1.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "ts-loader": "^9.3.0",
    "ts-node-dev": "2.0.0"
  },
  "prettier": {
    "tabWidth": 4,
    "breakBeforeElse": true,
    "printWidth": 90
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/tests/**/*.test.ts"
    ],
    "verbose": false
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --write",
    "*.ts": "eslint --cache --fix --cache-location ./node_modules/.cache/.eslintcache"
  }
}
